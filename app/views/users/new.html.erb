<h1>Create New User</h1>

<%= form_for @user, url: users_path do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= f.label :admin, 'Admin Status' %>
    <%= f.check_box :admin %>
  </div>

  <div class="actions">
    <%= f.submit 'Create User' %>
  </div>
<% end %>
