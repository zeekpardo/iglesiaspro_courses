<div class="bg-white ">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">

      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
      <% end %>
  <%if current_user&.admin? %>    
    <div class="flex justify-between items-center">
      <%= link_to "New course", new_course_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>   
  <% end %>
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Cursos</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">Aprende usar e implementarlo en tu iglesia.</p>
    </div>
     
    <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      
      <% @courses.each do |course| %>
      <article class="flex flex-col items-start justify-between">
      
        <div class="relative w-full">
            <%= image_tag course.image_file, alt: 'Logo', class: 'aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]' %> 
          <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
        </div>
        <div class="max-w-xl">
          <div class="mt-8 flex items-center gap-x-4 text-xs">
            
            
          </div>
          <div class="group relative">
            <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
              
                <span class="absolute inset-0"></span>
                <%= course.name %>
              
            </h3>
            <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600"><%= course.description %></p></p>
          </div>

          <div class="relative mt-8 flex items-center gap-x-4">
            
            <div class="text-sm leading-6">
              <% if course.videos.any? %>
                <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-base font-medium text-green-700 ring-1 ring-inset ring-green-600/20"><%= link_to "Ver curso", course %></span>
               <% else %>
                <span class="inline-flex items-center  px-2 py-1 text-base font-medium text-grey-700 "><%= "Por venir" %></span>
              <% end %>
          </div>
          <% if current_user&.admin? %>
                <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-base font-medium text-green-700 ring-1 ring-inset ring-green-600/20"><%= link_to "Editar Cursro", course %></span>
              <% end %>
        </div>
        
      </article>
        <% end %>
    </div>
  </div>
</div>



